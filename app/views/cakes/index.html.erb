<h1>All cakes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @cakes.each do |cake| %>
      <tr>
        <td><%= link_to cake.name, cake_path(cake) %></td>
        <td><small>(<%= pluralize cake.comments.size, "comment" %>)</small></td>
        <td><%= link_to 'Edit', edit_cake_path(cake) %></td>
        <td><%= link_to 'Delete', cake, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cake', new_cake_path %>


